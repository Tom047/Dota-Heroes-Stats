<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.view.fragments.SettingsFragment">

    <TextView
        android:id="@+id/sort_by_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort Heroes by:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginStart="15dp"/>

    <RadioGroup
        android:id="@+id/sort_by_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/sort_by_textview">

        <RadioButton
            android:id="@+id/hero_name_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hero Name" />

        <RadioButton
            android:id="@+id/attack_type_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attack Type" />

        <RadioButton
            android:id="@+id/regen_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health Regen" />

        <RadioButton
            android:id="@+id/armor_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Base Armor" />

        <RadioButton
            android:id="@+id/movement_speed_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movement Speed" />

        <RadioButton
            android:id="@+id/win_rate_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WinRate" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>